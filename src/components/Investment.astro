---
import { Image } from "astro:assets";
const { title, description, logo, url, tags } = Astro.props;

// Import all logo images dynamically
const logos = import.meta.glob("/src/assets/logos/*.{png,jpg,jpeg,svg,webp}", {
    eager: true,
    import: "default",
});

// Get the correct logo path
const logoKey = `/src/assets/logos${logo}`;
const logoSrc = logos[logoKey];
---

<a
    href={url}
    target="_blank"
    rel="noreferrer"
    class="border border-stone-200 dark:border-stone-800 grid grid-cols-12 gap-3 px-3 py-3 rounded-md hover:bg-stone-50 dark:hover:bg-stone-950 transition-colors"
>
    <div
        class="aspect-4/3 md:aspect-square p-2 flex items-center justify-center border-stone-200 dark:border-stone-800 border object-contain bg-white dark:bg-black col-span-4 sm:col-span-4 md:col-span-4 lg:col-span-3"
    >
        <Image
            src={logoSrc}
            alt={`Logo ${title}`}
            width={250}
            height={250}
            class="invert-0 brightness-0 dark:invert dark:brightness-1"
        />
    </div>
    <div
        class="flex flex-col col-span-8 sm:col-span-8 md:col-span-8 lg:col-span-9"
    >
        <div class="flex justify-between gap-3">
            <h3>
                {title}
            </h3>
            <span class="shrink-0">
                <svg
                    width="20"
                    height="20"
                    viewBox="0 0 15 15"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                    ><path
                        d="M3 2C2.44772 2 2 2.44772 2 3V12C2 12.5523 2.44772 13 3 13H12C12.5523 13 13 12.5523 13 12V8.5C13 8.22386 12.7761 8 12.5 8C12.2239 8 12 8.22386 12 8.5V12H3V3L6.5 3C6.77614 3 7 2.77614 7 2.5C7 2.22386 6.77614 2 6.5 2H3ZM12.8536 2.14645C12.9015 2.19439 12.9377 2.24964 12.9621 2.30861C12.9861 2.36669 12.9996 2.4303 13 2.497L13 2.5V2.50049V5.5C13 5.77614 12.7761 6 12.5 6C12.2239 6 12 5.77614 12 5.5V3.70711L6.85355 8.85355C6.65829 9.04882 6.34171 9.04882 6.14645 8.85355C5.95118 8.65829 5.95118 8.34171 6.14645 8.14645L11.2929 3H9.5C9.22386 3 9 2.77614 9 2.5C9 2.22386 9.22386 2 9.5 2H12.4999H12.5C12.5678 2 12.6324 2.01349 12.6914 2.03794C12.7504 2.06234 12.8056 2.09851 12.8536 2.14645Z"
                        fill="currentColor"
                        fill-rule="evenodd"
                        clip-rule="evenodd"></path></svg
                >
            </span>
        </div>

        <p class="text-xs">
            {description}
        </p>
    </div>
</a>
